---
import { getSecret } from "astro:env/server";
export const prerender = false;

const deployedEnvironment = getSecret("DEPLOYED_ENVIRONMENT") ?? "default";
const boxColor = getSecret("BOX_COLOR") ?? "blue";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>DevOps webapp</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
		/>
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/p5@1.11.11/lib/p5.min.js"></script>
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/vanta@0.5.24/dist/vanta.trunk.min.js"
		></script>

		<style define:vars={{ boxColor }}>
			body {
				width: 100%;
				height: 100dvh;
			}
			main {
				height: 100%;
			}
			.hero {
				display: flex;
				flex-direction: column;
				height: 100%;
				justify-content: center;
				padding-left: 1rem;
			}
			.subtitle {
				font-size: 28px;
			}
			.metadata-title {
				font-size: 24px;
			}
			.metadata-line {
				display: flex;

				gap: 8px;
				p {
					width: fit-content;
				}
				p:first-child {
					font-weight: 500;
				}
			}

			.box {
				width: 24px;
				height: 24px;
				margin-top: 4px;
				background-color: var(--boxColor);
			}
		</style>
	</head>
	<body>
		<main class="container">
			<section class="hero">
				<div class="content">
					<h1>Mock web app</h1>
					<h2 class="subtitle">Dev Ops is a long journey. Have fun!</h2>
				</div>

				<h3 class="metadata-title">Metadata</h3>
				<ul class="metadata">
					<li>
						<div class="metadata-line">
							<p>Deployed environment:</p>
							<p>{deployedEnvironment}</p>
						</div>
					</li>

					<li>
						<div class="metadata-line">
							<p>Box Color:</p>
							<span class="box"></span>
						</div>
					</li>
				</ul>
			</section>
		</main>
	</body>

	<script>
		window.VANTA.TRUNK({
			el: "body",
			mouseControls: true,
			touchControls: true,
			gyroControls: false,
			minHeight: 200.0,
			minWidth: 200.0,
			scale: 1.0,
			scaleMobile: 1.0,
		});
	</script>
</html>
